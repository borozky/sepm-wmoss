@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (Model.FeatureSlides != null)
{
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        @for (int i = 0; i < Model.FeatureSlides.Count(); i++)
        {
            var className = i == 0 ? "item active" : "item";
            
            <div class="@className">
                <img src="@Model.FeatureSlides.ElementAt(i).ImageUrl" alt="@Model.FeatureSlides.ElementAt(i).Title">
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

}

<div class="panel panel-warning height">
    <div class="panel-heading">
        Express Checkout
        <br>
        <small class="text-muted">For quick and convinient ticket purchase</small>
    </div>
    <div class="panel-body">
        <div id="ExpressCheckoutParent"></div>
    </div>
</div>

<div class="clearfix" style="margin: 25px">

    <h3>Now Showing</h3>
    <nav class="navbar" style="font-size: 12px">
        <ul class="pagination text-right">
            <!--more button-->
            <li class="page-item">
                <a class="page-link" href="now-showing.html">View More</a>
            </li>
        </ul>
    </nav>
    

    <div class="row text-center">
        @foreach (var movie in Model.NowShowingMovies)
        {
            <div class="col-sm-3 col-md-3">
                <div class="thumbnail clearfix" style="width:70%;">
                    <h4>@string.Format("{0}{1: (yyyy)}", movie.Title, movie.ReleaseDate)</h4>
                    @if (movie.PosterFileName == null)
                    {
                        <img src="http://placehold.it/270x400" alt="@string.Format("{0}{1:(yyyy)}", movie.Title, movie.ReleaseDate)">
                    }
                    else
                    {
                        <img src="@movie.PosterFileName" alt="@string.Format("{0}{1:(yyyy)}", movie.Title, movie.ReleaseDate)">
                    }
                    <a asp-page="/Movies/Details" asp-route-id="@movie.Id" asp-ro class="btn btn-primary col-xs-12" role="button">View Details</a>
                    <div class="clearfix"></div>
                </div>
            </div>
        }
    </div>

    <br>
    <hr>

    <h3>Coming Soon</h3>
    <nav class="navbar" style="font-size: 12px">
        <ul class="pagination text-right">
            <!--more button-->
            <li class="page-item">
                <a class="page-link" href="now-showing.html">View More</a>
            </li>
        </ul>
    </nav>

    <div class="row text-center">
        @foreach (var movie in Model.ComingSoonMovies)
        {
            <div class="col-sm-3 col-md-3">
                <div class="thumbnail clearfix" style="width:70%;">
                    <h4>@string.Format("{0}{1: (yyyy)}", movie.Title, movie.ReleaseDate)</h4>
                    @if (movie.PosterFileName == null)
                    {
                        <img src="http://placehold.it/270x400" alt="@string.Format("{0}{1:(yyyy)}", movie.Title, movie.ReleaseDate)">
                    }
                    else
                    {
                        <img src="@movie.PosterFileName" alt="@string.Format("{0}{1:(yyyy)}", movie.Title, movie.ReleaseDate)">
                    }
                    <a asp-page="/Movies/Details" asp-route-id="@movie.Id" asp-ro class="btn btn-primary col-xs-12" role="button">View Details</a>
                    <div class="clearfix"></div>
                </div>
            </div>
        }
    </div>




</div>


