    <nav id="NavTop">
        <div class="container clearfix">
            <ul id="NavTop-left" class="pull-left">
                <li><a asp-page="/Faq">FAQ</a></li>
                <li><a asp-page="/About">About</a></li>
                <li><a asp-page="/Contact">Contact Us</a></li>
            </ul>
            <ul id="NavTop-right" class="pull-right">
                <li>
                    @await Component.InvokeAsync("CartButton")
