                <ul class="nav navbar-nav">
                    <li><a asp-page="/Movies/NowShowing">Now Showing</a></li>
                    <li><a asp-page="/Movies/ComingSoon">Coming Soon</a></li>
                    <li><a asp-page="/Movies/Index">All Movies</a></li>
                    @await  Component.InvokeAsync("TheatersList")
                </ul>

                <form asp-page="/Search/Movies" method="GET" class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" name="keyword" class="form-control input-sm" placeholder="Search">
                    </div>
                </form>
            </div><!--/.nav-collapse -->
